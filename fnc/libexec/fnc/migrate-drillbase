#!/usr/bin/env bash

set -e

. $(PWD)/bin/init

path=$FNC_CONFIG
address=$(dapp create src/DrillBase.sol:DrillBase)
export DRILLBASE=$address
seth send $FURNACEPROXYADMIN "upgrade(address,address)" $DRILLBASE_PROXY $DRILLBASE
cat $path | jq '.DRILLBASE = $address' --arg address $DRILLBASE | sponge $path
